name: Sync Single Folder

on:
  schedule:
    - cron: '0 * * * *'  # 每小时同步一次
  workflow_dispatch:  # 允许手动触发

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Sync folder from upstream
        run: |
          git remote add upstream https://github.com/原始作者/仓库名.git
          git fetch upstream
          git checkout upstream/main -- 文件夹路径
          git add 文件夹路径
          git commit -m "Sync folder from upstream"
          git push origin main
